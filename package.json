{
  "name": "fraud-detection-app",
  "version": "1.0.0",
  "description": "Real-time chat and call application with fraud detection",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../front-end-new && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd front-end-new && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd front-end-new && npm start",
    "build": "cd front-end-new && npm run build"
  },
  "keywords": [
    "fraud-detection",
    "chat",
    "video-call",
    "socket.io",
    "next.js",
    "webrtc"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
